block js
  script.
    $('#login_session').on('submit', function(e){
        if($('#user').val().trim()===''){
          alert('faltan datos de usuario');
          e.preventDefault();
        }else{
         if($('#pass').val().trim()===''){
            alert('Faltan datos de contraseña');
            e.preventDefault();
          }else{
           return true;
          }
        }
      });