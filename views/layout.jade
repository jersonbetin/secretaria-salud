doctype html
html(lang="es")
  head
    block title
        title= title

    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')

    block meta
    link(rel='stylesheet', href='/stylesheets/less/bootstrap/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/less/style_general/style.css')
    link(rel='stylesheet', href='/stylesheets/css/font-awesome.css')
    block css

  body
    block header
      .container
          .row
            .col-lg-12
              #myCarousel.carousel.slide(data-ride="carousel")

                div.carousel-inner
                  div.item.active
                    img(src="/images/slider-3.png" alt="slider-3")
                  div.item
                    img(src="/images/slider-1.png" alt="slider-1")
                  div.item
                    img(src="/images/slider-2.jpg" alt="slider-2")
                a.left.carousel-control(href="#myCarousel" data-slide="prev")
                a.right.carousel-control(href="#myCarousel" data-slide="next")
          .navbar.navbar-default(role="navigation")
              .row
                .col-lg-12
                block nav
                  .navbar-header
                    .col-lg-12



    block content


    block foot
